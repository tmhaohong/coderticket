<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= flash_messages %>
  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if !isSignedIn? %>
        <li class="nav-item">
          <a class="nav-link" href="<%= login_path %>">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= signup_path %>">Sign Up</a>
        </li>
      <% else %>

        <li class="nav-item">
          <a class="nav-link actived"> Hello, <%= get_current_user.name %> </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_path %>">Create event</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= signout_path %>">Sign out</a>
        </li>

      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
