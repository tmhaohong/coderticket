<%= form_for(Event.new, url: signup_path, html: {class: "event-form"}) do |f| %>
  <h4>Create new event</h4>
  <div class="form-group">
    <label >Event name</label>
    <div class="controls">
      <%= f.text_field 'name', class: "form-control", placeholder: 'Event name' %>
    </div>
  </div>
  <div class="form-group">
    <label>Event category</label>
    <div class="controls">
      <%= f.select :category, options_for_select(@categories.map{ |category| [category.name, category.name] }), {}, {:class => "form-control"}  %>
    </div>
  </div>
  <div class="form-group">
    <label >Hero image url</label>
    <div class="controls">
      <%= f.text_field 'hero_image_url', class: "form-control", placeholder: 'Hero image url' %>
    </div>
  </div>
  <div class="form-group">
    <label >Extended Html description</label>
    <div class="controls">
      <%= f.text_area "extended_html_description", class: "form-control", placeholder: "Extended Html description" %>
    </div>
  </div>
  <%= f.submit "Create" %>
<% end %>

